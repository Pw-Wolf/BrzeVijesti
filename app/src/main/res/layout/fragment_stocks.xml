<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".StocksFragment">

    <TextView
        android:id="@+id/stockSymbolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAPL"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/stockPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Price: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/stockHighPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Price: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/stockLowPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Price: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/stockOpenPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Price: "
        android:textSize="16sp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/stockPreviousClosePriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Close: "
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/addToFavoritesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Favorites"/>

</LinearLayout>